{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "release",
            "type": "shell",
            "windows": {
                "command": "cd ${workspaceFolder}/fuzzylite; build.bat release"
            },
            "linux": {
                "command": "cd ${workspaceFolder}/fuzzylite; sh build.sh release"
            },
            "osx": {
                "command": "cd ${workspaceFolder}/fuzzylite; sh build.sh release"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "windows": {
                "command": "cd ${workspaceFolder}/fuzzylite; FL_BUILD_TESTS=ON build.bat release"
            },
            "linux": {
                "command": "cd ${workspaceFolder}/fuzzylite; FL_BUILD_TESTS=ON FL_NOW=ON sh build.sh release"
            },
            "osx": {
                "command": "cd ${workspaceFolder}/fuzzylite; FL_BUILD_TESTS=ON FL_NOW=ON sh build.sh release"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "format",
            "type": "shell",
            "windows": {
                "command": "cd ${workspaceFolder}/fuzzylite; build.bat format"
            },
            "linux": {
                "command": "cd ${workspaceFolder}/fuzzylite; sh build.sh format"
            },
            "osx": {
                "command": "cd ${workspaceFolder}/fuzzylite; sh build.sh format"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}